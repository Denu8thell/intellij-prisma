<idea-plugin>
    <id>fr.gabrielcolson.prisma.prisma-intellij-plugin</id>
    <name>Prisma</name>
    <vendor email="gabrielcolson@hotmail.fr" url="http://github.com/gabrielcolson">Gabriel Colson</vendor>

    <description>Add support for the Prisma Schema Language (PSL)</description>
    <idea-version since-build="191"/>

    <change-notes><![CDATA[
       <ul>
            <li>1.2.3: Fix fields named "type" shown as an error</li>
            <li>1.2.2: Fix type aliases syntax</li>
            <li>1.2.0: Support comment shortcut, support for type aliases</li>
            <li>1.1.0: Better syntax highlighting, support for older versions of intelliJ IDEs</li>
            <li>1.0.0: Initial release, icon support for .prisma files, and basic syntax highlighting</li>
       </ul>
    ]]></change-notes>

    <!-- please see https://www.jetbrains.org/intellij/sdk/docs/basics/getting_started/plugin_compatibility.html
         on how to target different products -->
    <depends>com.intellij.modules.platform</depends>

    <extensions defaultExtensionNs="com.intellij">
        <fileType
                name="Prisma"
                implementationClass="org.intellij.sdk.language.PrismaFileType"
                fieldName="INSTANCE"
                language="Prisma"
                extensions="prisma"
        />
        <lang.parserDefinition
                language="Prisma"
                implementationClass="org.intellij.sdk.language.PrismaParserDefinition"
        />
        <lang.syntaxHighlighterFactory
                language="Prisma"
                implementationClass="org.intellij.sdk.language.PrismaSyntaxHighlighterFactory"
        />
        <annotator language="Prisma" implementationClass="org.intellij.sdk.language.PrismaAnnotator"/>
        <lang.commenter language="Prisma" implementationClass="org.intellij.sdk.language.PrismaCommenter"/>
        <preloadingActivity
                implementation="org.intellij.activity.PrismaPreloadingActivity"/>
        <completion.contributor implementationClass="org.wso2.lsp4intellij.contributors.LSPCompletionContributor"
                                id="LSPCompletionContributor" language="Prisma"/>
        <externalAnnotator id="LSPAnnotator" language="Prisma" implementationClass="org.wso2.lsp4intellij.contributors.annotator.LSPAnnotator"/>
        <gotoSymbolContributor implementation="org.wso2.lsp4intellij.contributors.symbol.LSPSymbolContributor"
                               id="LSPSymbolContributor"/>
        <renameHandler implementation="org.wso2.lsp4intellij.contributors.rename.LSPRenameHandler"
                       id="LSPRenameHandler" order="first"/>
        <renamePsiElementProcessor implementation="org.wso2.lsp4intellij.contributors.rename.LSPRenameProcessor"
                                   id="LSPRenameProcessor" order="first"/>
        <typedHandler implementation="org.wso2.lsp4intellij.listeners.LSPTypedHandler"
                      id="LSPTypedHandler"/>
    </extensions>

    <application-components>
        <component>
            <implementation-class>org.wso2.lsp4intellij.IntellijLanguageClient</implementation-class>
        </component>
    </application-components>

    <actions>
        <action class="org.wso2.lsp4intellij.actions.LSPReformatAction" id="ReformatCode" use-shortcut-of="ReformatCode"
                overrides="true" text="Reformat Code"/>
        <action class="org.wso2.lsp4intellij.actions.LSPShowReformatDialogAction" id="ShowReformatFileDialog"
                use-shortcut-of="ShowReformatFileDialog" overrides="true" text="Show Reformat File Dialog"/>
        <action class="org.wso2.lsp4intellij.actions.LSPReferencesAction" id="LSPFindUsages">
            <keyboard-shortcut first-keystroke="shift alt F7" keymap="$default"/>
        </action>
    </actions>
</idea-plugin>